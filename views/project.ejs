<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs'); %>
</head>
<body>
    <%- include('./partials/header.ejs'); %>
    <main>
        <div class="container-fluid">
            <h1 class="text-center">Projects</h1>
            <!-- view tasks button -->
            <button type="button" class="btn btn-outline-success btn-sm">view tasks</button>
        </div>
        <div class="container-fluid mt-2">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center">Projects Details</h2>
                    <table class="table table-striped">
                        <tr>
                            <th>Project ID</th>
                            <th>Title</th>
                            <th>Descriptions</th>
                            <th>Client ID</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                        </tr>
                        <tbody>
                            <% for(var i=0;i<projectData.length;i++){
                                %>
                                <tr>
                                   <td class="text-center"><%=projectData[i].projectId %></td>
                                   <td class="text-center"><%=projectData[i].title %></td>
                                   <td class="text-center"><%=projectData[i].descriptions %></td>
                                   <td class="text-center"><%=projectData[i].clientId %></td>
                                   <td class="text-center"><%=projectData[i].startDate %></td>
                                   <td class="text-center"><%=projectData[i].endDate %></td> 
                                </tr>
                            <%} %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</body>
</html>